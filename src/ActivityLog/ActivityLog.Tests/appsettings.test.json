{
  "ActivityLogging": {
    "IsEnabled": true,
    "MinimumLogLevel": "Information",
    "Serialization": {
      "MaxDepth": 3,
      "MaxStringLength": 1000,
      "SerializeInputParameters": true,
      "SerializeReturnValues": true,
      "IgnoreNullValues": true,
      "ExcludedTypes": [
        "System.IO.Stream",
        "Microsoft.AspNetCore.Http.HttpContext",
        "Microsoft.Extensions.Logging.ILogger"
      ],
      "ExcludedProperties": [
        "Password",
        "Secret",
        "Token",
        "Key",
        "ConnectionString"
      ]
    },
    "Performance": {
      "EnableHighPrecisionTiming": true,
      "SlowMethodThresholdMs": 1000,
      "LogOnlySlowMethods": false,
      "MaxConcurrentLoggingOperations": 4
    },
    "ExceptionHandling": {
      "CaptureFullStackTrace": true,
      "CaptureInnerExceptions": true,
      "ContinueOnLoggingFailure": true,
      "MaxExceptionMessageLength": 5000
    },
    "Filtering": {
      "IncludedNamespaces": [],
      "ExcludedNamespaces": [
        "System",
        "Microsoft.Extensions.Logging",
        "Microsoft.EntityFrameworkCore"
      ],
      "ExcludedMethods": [
        "ToString",
        "GetHashCode",
        "Equals",
        "GetType"
      ],
      "UseWhitelistMode": false
    },
    "AsyncLogging": {
      "EnableAsyncLogging": false,
      "BatchSize": 100,
      "FlushIntervalMs": 5000,
      "MaxQueueSize": 10000,
      "AsyncTimeoutMs": 30000
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "ActivityLog": "Debug",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  }
}
