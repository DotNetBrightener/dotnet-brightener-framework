<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<Description>A library that helps configuring DotNetBrightener.CryptoEngine in ASP.Net Core applications with minimal efforts</Description>
		<PackageDescription>$(Description)</PackageDescription>
		<Platforms>AnyCPU;ARM64</Platforms>
	</PropertyGroup>

	<ItemGroup>
		<FrameworkReference Include="Microsoft.AspNetCore.App" />
	</ItemGroup>

	<ItemGroup Condition="$(Configuration)=='Debug'">
		<ProjectReference Include="..\DotNetBrightener.CryptoEngine\DotNetBrightener.CryptoEngine.csproj" />
	</ItemGroup>

	<ItemGroup Condition="$(Configuration)=='Release'">
		<PackageReference Include="DotNetBrightener.CryptoEngine" Version="$(DNBLibraryVersion)" />
	</ItemGroup>

</Project>
