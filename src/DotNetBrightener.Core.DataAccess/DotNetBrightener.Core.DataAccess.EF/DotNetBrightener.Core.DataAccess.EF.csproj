<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<PackageDescription>
			A library that adds EntityFramework support and utilizes the Data Access layer from DotNet Brightener Framework
		</PackageDescription>
		<PackageReleaseNotes>
			* v1.0.5:
			- Upgrade dependencies.
		</PackageReleaseNotes>
	</PropertyGroup>


	<ItemGroup>
		<FrameworkReference Include="Microsoft.AspNetCore.App" />
		<PackageReference Include="Microsoft.EntityFrameworkCore" Version="5.0.7" />
		<PackageReference Include="Microsoft.EntityFrameworkCore.Proxies" Version="5.0.7" />
		<PackageReference Include="Microsoft.EntityFrameworkCore.SqlServer" Version="5.0.7" />
	</ItemGroup>


	<ItemGroup Condition="$(Configuration)=='Debug'">
	  <ProjectReference Include="..\DotNetBrightener.Core.DataAccess\DotNetBrightener.Core.DataAccess.csproj" />
	</ItemGroup>


	<ItemGroup Condition="$(Configuration)=='Release'">
		<PackageReference Include="DotNetBrightener.Core.DataAccess" Version="$Version" />
	</ItemGroup>
</Project>
