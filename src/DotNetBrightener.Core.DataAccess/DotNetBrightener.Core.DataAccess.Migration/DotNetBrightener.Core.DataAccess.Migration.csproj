<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>net5.0</TargetFrameworks>
		<PackageId>DotNetBrightener.Core.DataAccess.Migration</PackageId>
		<Version>1.0.0</Version>
		<Copyright>© 2020 DotNet Brightener</Copyright>
		<Authors>DotNet Brightener &lt;dotnetbrightener@gmail.com&gt;</Authors>
		<Company>DotNet Brightener</Company>
		<PackageDescription>
			A library makes use of FluentMigrator to provide centralized services for database schema migration.
		</PackageDescription>
		<RepositoryUrl>https://github.com/dotnetbrightener/dotnet-brightener-framework</RepositoryUrl>
		<PackageLicenseFile>LICENSE</PackageLicenseFile>
		<PackageIcon>dotnet-brightener-logo.png</PackageIcon>
		<RepositoryType>git</RepositoryType>
		<Description>
			A library makes use of FluentMigrator to provide centralized services for database schema migration.
		</Description>
		<GenerateDocumentationFile>true</GenerateDocumentationFile>
		<NoWarn>1701;1702;1591;1574;1723</NoWarn>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<PackageTags>database schema migration;</PackageTags>
		<PackageReleaseNotes>
			* v1.0.0:
			- Initial version 
			- Integration with FluentMigrator.
		</PackageReleaseNotes>
		<RootNamespace>DotNetBrightener.Core.DataAccess.Migration</RootNamespace>
		<AssemblyName>DotNetBrightener.Core.DataAccess.Migration</AssemblyName>
	</PropertyGroup>
	<ItemGroup>
		<None Include="..\..\..\dotnet-brightener-logo.png">
			<Pack>True</Pack>
			<PackagePath></PackagePath>
		</None>
		<None Include="..\..\..\LICENSE">
			<Pack>True</Pack>
			<PackagePath></PackagePath>
		</None>
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="FluentMigrator" Version="3.2.15" />
		<PackageReference Include="FluentMigrator.Runner" Version="3.2.15" />
		<PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="5.0.1" />
		<PackageReference Include="Microsoft.Extensions.Logging" Version="5.0.0" />
	</ItemGroup>

	<ItemGroup Condition="$(Configuration)=='Debug'">
		<ProjectReference Include="..\DotNetBrightener.Core.DataAccess.Abstractions\DotNetBrightener.Core.DataAccess.Abstractions.csproj" />
	</ItemGroup>


	<ItemGroup Condition="$(Configuration)=='Release'">
		<PackageReference Include="DotNetBrightener.Core.DataAccess.Abstractions" Version="1.0.5" />
	</ItemGroup>
</Project>
