<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>net5.0</TargetFrameworks>
		<PackageId>DotNetBrightener.Core.DataAccess.PostgreSQL</PackageId>
		<Version>1.0.0-beta-001</Version>
		<Copyright>Â© 2020 DotNet Brightener</Copyright>
		<Authors>DotNet Brightener</Authors>
		<Company>DotNet Brightener</Company>
		<PackageDescription>
			A library that adds the support for PostgreSQL to the centralized data access layer of DotNet Brightener Framework.
		</PackageDescription>
		<RepositoryUrl>https://github.com/dotnetbrightener/dotnet-brightener-framework</RepositoryUrl>
	</PropertyGroup>

	<ItemGroup>
		<FrameworkReference Include="Microsoft.AspNetCore.App" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="linq2db.PostgreSQL" Version="3.1.6" />
	</ItemGroup>

	<ItemGroup Condition="$(Configuration)=='Debug'">
		<ProjectReference Include="..\DotNetBrightener.Core.DataAccess\DotNetBrightener.Core.DataAccess.csproj" />
	</ItemGroup>


	<ItemGroup Condition="$(Configuration)=='Release'">
		<PackageReference Include="DotNetBrightener.Core.DataAccess" Version="1.0.0-beta-001" />
	</ItemGroup>

	<PropertyGroup>
		<DocumentationFile>bin\$(Configuration)\$(TargetFramework)\$(AssemblyName).xml</DocumentationFile>
		<NoWarn>1701;1702;1591;1574;1723</NoWarn>
	</PropertyGroup>

</Project>
