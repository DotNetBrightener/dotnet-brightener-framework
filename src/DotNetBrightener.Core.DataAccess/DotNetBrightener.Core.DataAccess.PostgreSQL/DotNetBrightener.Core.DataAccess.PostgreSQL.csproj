<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<PackageId>DotNetBrightener.Core.DataAccess.PostgreSQL</PackageId>
		<PackageDescription>
			A library that adds the support for PostgreSQL to the centralized data access layer of DotNet Brightener Framework.
		</PackageDescription>
		<Description>
			A library that adds the support for PostgreSQL to the centralized data access layer of DotNet Brightener Framework.
		</Description>
		<PackageReleaseNotes>
			* v1.0.6:
			- Upgrade dependencies.
		</PackageReleaseNotes>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="linq2db.PostgreSQL" Version="3.4.0" />
