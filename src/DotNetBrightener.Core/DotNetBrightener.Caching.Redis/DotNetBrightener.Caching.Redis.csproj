<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<PackageId>DotNetBrightener.Caching.Redis</PackageId>
		<VersionPrefix>2021.8.1</VersionPrefix>
		<VersionSuffix></VersionSuffix>
		<Description>
			A library that provides mechanism for caching data using Redis cache
		</Description>
		<PackageDescription>
			$(Description)
		</PackageDescription>
	</PropertyGroup>

	<ItemGroup>
		<FrameworkReference Include="Microsoft.AspNetCore.App" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
		<PackageReference Include="StackExchange.Redis" Version="2.2.4" />
	</ItemGroup>

	<ItemGroup Condition="$(Configuration)=='Debug'">
		<ProjectReference Include="..\DotNetBrightener.Caching\DotNetBrightener.Caching.Abstractions.csproj" />
	</ItemGroup>

	<ItemGroup Condition="$(Configuration)=='Release'">
		<PackageReference Include="DotNetBrightener.Caching.Abstractions" Version="1.0.5-beta" />
	</ItemGroup>
</Project>
