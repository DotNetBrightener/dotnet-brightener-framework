	<ItemGroup>
	  <None Include="..\..\..\dotnet-brightener-logo.png">
	    <Pack>True</Pack>
	    <PackagePath></PackagePath>
	  </None>
	  <None Include="..\..\..\LICENSE">
	    <Pack>True</Pack>
	    <PackagePath></PackagePath>
	  </None>
	</ItemGroup>

	<PropertyGroup>
		<GenerateDocumentationFile>true</GenerateDocumentationFile>
		<NoWarn>1701;1702;1591;1574;1723</NoWarn>
		<PackageLicenseFile>LICENSE</PackageLicenseFile>
		<PackageIcon>dotnet-brightener-logo.png</PackageIcon>
		<RepositoryType>git</RepositoryType>
		<PackageTags>asp net core friendly url slug</PackageTags>
		<Description>A library that adds friendly routing to ASP.Net Core Application</Description>
		<PackageReleaseNotes>Adjusted the FrontEndRouter for flexibility of letting the consumer define what it wants to include in the router, to match their own system.</PackageReleaseNotes>
