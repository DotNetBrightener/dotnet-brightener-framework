<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<VersionPrefix>2022.7.1</VersionPrefix>
		<PackageDescription>
			A library that adds supports for friendly routing ASP.Net Core Application
		</PackageDescription>
		<RepositoryUrl>https://github.com/dotnetbrightener/dotnet-brightener-framework</RepositoryUrl>
		<Platforms>AnyCPU;ARM64</Platforms>
	</PropertyGroup>

	<ItemGroup>
		<FrameworkReference Include="Microsoft.AspNetCore.App" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.Extensions.DependencyModel" Version="6.0.0" />
		<PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
	</ItemGroup>

	<ItemGroup>
	  <None Include="..\..\..\dotnet-brightener-logo.png">
	    <Pack>True</Pack>
	    <PackagePath></PackagePath>
	  </None>
	  <None Include="..\..\..\LICENSE">
	    <Pack>True</Pack>
	    <PackagePath></PackagePath>
	  </None>
	</ItemGroup>

	<PropertyGroup>
		<PackageTags>asp net core friendly url slug</PackageTags>
		<Description>A library that adds friendly routing to ASP.Net Core Application</Description>
		<PackageReleaseNotes>Adjusted the FrontEndRouter for flexibility of letting the consumer define what it wants to include in the router, to match their own system.</PackageReleaseNotes>
	</PropertyGroup>

</Project>